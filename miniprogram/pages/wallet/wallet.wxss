.container{
	height: 1180rpx;
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
  padding: 10px;
  background-color: #f5f5f5; /* 背景色可以根据需要更改 */
}

.header2{
  display: flex;
  flex-direction: column;
  justify-content: space-between; /* 在水平方向上分布均匀 */
  align-items: left;
  text-decoration: none; /* 移除下划线 */
}
.header3 {
  display: flex;
  flex-direction: row;
  justify-content: space-between; /* 在水平方向上分布均匀 */
  align-items: center;
  text-decoration: none; /* 移除下划线 */
  
}
.header4 {
	height: 100%;
	width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around; /* 在水平方向上分布均匀 */
  align-items: center;
  text-decoration: none; /* 移除下划线 */
  color: #333333;
}
.title_1 {
  font-size: 18px; /* 字体大小 */
  color: #333333; /* 文字颜色 */
}
.title_2{
  font-size: 18px; /* 字体大小 */
  color: #333333; /* 文字颜色 */
}
.title_3 {
  font-size: 15px; /* 字体大小 */
  color: #cbcbcb; /* 文字颜色 */
  
  
}
.title_4 {
  font-size: 18px; /* 字体大小 */
  color: #333333; /* 文字颜色 */
  
}
.header4 .title_4 {
  color: #00aaff; /* 提现按钮的文字颜色，可以根据需求更改 */
}

.header2:hover, .header4:hover {
  background-color: #f0f0f0; /* 鼠标悬停时的背景色 */
}

.card1{
  width: 80%; /* 卡片宽度为父容器的80% */
  height: 200rpx;
  padding: 20px;
  margin: 10px 0;
  background-color: #ffffff; /* 白色背景 */
  border-radius: 10px; /* 圆角边框 */
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1); /* 阴影 */
}
